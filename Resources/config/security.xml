<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_connect.oauth_controller.class">SymfonyCorp\Bundle\ConnectBundle\Controller\OAuthController</parameter>
        <parameter key="security.authentication.provider.symfony_connect.class">SymfonyCorp\Connect\Security\Authentication\Provider\ConnectAuthenticationProvider</parameter>
        <parameter key="security.authentication.listener.symfony_connect.class">SymfonyCorp\Connect\Security\Firewall\ConnectAuthenticationListener</parameter>
        <parameter key="security.authentication.entry_point.symfony_connect.class">SymfonyCorp\Connect\Security\EntryPoint\ConnectEntryPoint</parameter>
        <parameter key="security.user.provider.symfony_connect_in_memory.class">SymfonyCorp\Connect\Security\User\ConnectInMemoryUserProvider</parameter>
        <parameter key="symfony_connect.authentication.rethrow_exception">%kernel.debug%</parameter>
    </parameters>

    <services>
       <service id="security.authentication.listener.symfony_connect" class="%security.authentication.listener.symfony_connect.class%" parent="security.authentication.listener.abstract" abstract="true">
            <call method="setOAuthConsumer">
                <argument type="service" id="symfony_connect.oauth_consumer" />
            </call>
            <call method="setOAuthCallback">
                <argument>oauth_callback</argument>
            </call>
            <call method="setApi">
                <argument type="service" id="symfony_connect.api" />
            </call>
            <call method="setRethrowException">
                <argument>%symfony_connect.authentication.rethrow_exception%</argument>
            </call>
       </service>

       <service id="security.authentication.provider.symfony_connect" class="%security.authentication.provider.symfony_connect.class%" abstract="true">
           <argument /> <!-- user provider -->
           <argument /> <!-- providerKey -->
       </service>

        <service id="security.authentication.entry_point.symfony_connect" class="%security.authentication.entry_point.symfony_connect.class%">
            <argument type="service" id="symfony_connect.oauth_consumer" />
            <argument type="service" id="security.http_utils" />
            <argument>oauth_callback</argument>
        </service>

        <service id="security.user.provider.symfony_connect_in_memory" class="%security.user.provider.symfony_connect_in_memory.class%" abstract="true" public="false">
        </service>

        <service id="symfony_connect.oauth_controller" class="%symfony_connect.oauth_controller.class%">
            <argument type="service" id="security.authentication.entry_point.symfony_connect" />
            <tag name="controller.service_arguments" />
        </service>

        <service id="%symfony_connect.oauth_controller.class%" alias="symfony_connect.oauth_controller" public="true" />
    </services>
</container>
